<!DOCTYPE html>
<html theme="dark">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Core Practice</title>
    <link rel="stylesheet" href="~/css/index.css" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <div class="our-grid">
            <div class="row">
                <div class="header center-block-vert col-10 push-1 pull-1">
                    <div class="header-phone col-6">
                        <div class="header-phone_con center-align-vertical">
                            <b>
                                <p>700</p>
                            </b>
                            <h6 class="light-text">режим работы с 07:00 до 22:00</h6>
                        </div>
                    </div>
                    <div class="header-but col-6">
                        <div class="header-but_con center-align-vertical">
                            <a class="header-but-block" href="">
                                <p>A</p>
                            </a>
                            <a class="header-but-block" href="">
                                <p>К</p>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="our-grid">
            <div class="row">
                <div class="main-header center-block-vert col-10 push-1 pull-1">
                    <div class="main-header-logo">
                        <img src="~/images/logo.png" alt="">
                        <p>steel<span>smart</span></p>
                    </div>
                    <div class="main-header-left col-xl-6">
                        <ul>
                            <li>
                                <h4>Ожидаемые товары</h4>
                            </li>
                            <li>
                                <h4>Лучшая цена</h4>
                            </li>
                        </ul>
                    </div>
                    <div class="main-header-right col-xl-6 col-6">
                        <ul>
                            <li>
                                <h4>магазин электроники и эксессуаров</h4>
                            </li>
                        </ul>
                    </div>
                    <div class="main-header-bottom main-header-bottom_left col-4">
                        <ul class="">
                            <li>
                                <h4>Акции</h4>
                            </li>
                            <li>
                                <h4>Магазины</h4>
                            </li>
                        </ul>
                    </div>
                    <div class="main-header-bottom main-header-bottom_right col-8">
                        <ul class="">
                            <li>
                                <h4>Клиентам</h4>
                            </li>
                            <li>
                                <h4>Сервис и услуги</h4>
                            </li>
                            <li>
                                <h4>Работа в SteelSmart</h4>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()

    <footer class="container">
        <div class="our-grid">
            <div class="row">
                <div class="center-block-vert footer-block col-10 push-1 pull-1">
                    &copy; 2020 - core-practice
                </div>
            </div>
        </div>
    </footer>

    @*<footer class="border-top footer text-muted">
        <div class="container">

        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
